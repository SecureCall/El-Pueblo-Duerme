{
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "README.md",
      ".env*",
      ".git",
      "src/**",
      "app/src/**",
      "app/package.json",
      "app/firebase.json"
    ],
    "frameworksBackend": {
      "region": "us-central1"
    }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
   "storage": {
    "rules": "storage.rules"
  }
}
