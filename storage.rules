rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Public read access is allowed for assets like avatars.
      allow read;
      // Write access is only allowed for authenticated users.
      // This allows users to upload/change their own avatar if such functionality is implemented.
      allow write: if request.auth != null;
    }
  }
}
