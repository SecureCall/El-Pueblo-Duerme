rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Public read access is allowed for assets like avatars.
      allow read;
      // Write access is only allowed for authenticated users.
      // Further restrictions (e.g., file size, type, path) can be added here.
      allow write: if request.auth != null;
    }
  }
}
