
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read for all files (e.g., avatars).
    match /{allPaths=**} {
      allow read;
      // Allow write only for authenticated users (e.g., for uploading custom avatars in the future).
      allow write: if request.auth != null;
    }
  }
}
