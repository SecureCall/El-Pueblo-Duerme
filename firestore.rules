
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the user is a player in the game.
    function isPlayer(gameId) {
      return get(/databases/$(database)/documents/games/$(gameId)).data.players.exists(p => p.userId == request.auth.uid);
    }
    
    // Helper function to check if the user is the creator of the game.
    function isCreator(gameId) {
      return get(/databases/$(database)/documents/games/$(gameId)).data.creator == request.auth.uid;
    }

    match /games/{gameId} {
      // Anyone can read game data to watch or join public games.
      allow read: if request.auth != null;

      // Only authenticated users can create new game documents.
      allow create: if request.auth != null;
      
      // Update rules are more complex.
      allow update: if 
          // Rule 1: The user must be authenticated.
          request.auth != null &&
          (
            // Rule 2: A player can join a game that is in the 'waiting' state.
            (
                resource.data.status == 'waiting' &&
                request.resource.data.players.size() == resource.data.players.size() + 1
            ) ||
            // Rule 3: The creator of the game is allowed to start it or reset it.
            (
                request.auth.uid == resource.data.creator &&
                (
                    // Starting the game
                    (resource.data.status == 'waiting' && request.resource.data.status == 'in_progress') ||
                    // Processing game phases (day, night, etc.)
                    (resource.data.status == 'in_progress' && resource.data.phase != request.resource.data.phase) ||
                    // Resetting the game
                    (resource.data.status == 'finished' && request.resource.data.status == 'waiting')
                )
            ) ||
            // Rule 4: An existing player can update their own state (vote, use ability, change avatar)
            (
                isPlayer(gameId) &&
                request.resource.data.players.size() == resource.data.players.size()
            )
          );
    }
  }
}
