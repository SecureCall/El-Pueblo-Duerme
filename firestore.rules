rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ¡¡PELIGROSO!! SOLO PARA DESARROLLO Y PRUEBAS.
    // Esta regla permite a cualquier usuario autenticado leer y escribir en toda la base de datos.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
