
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /games/{gameId} {
      
      // Reglas para documentos individuales
      allow read: if request.auth != null && (resource.data.settings.isPublic == true || request.auth.uid in resource.data.players.map(p => p.userId));
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid in resource.data.players.map(p => p.userId);
      allow delete: if request.auth != null && request.auth.uid == resource.data.creator;

      // Reglas para la colección
      match /{allPaths=**} {
        // La consulta para salas públicas debe filtrar por isPublic == true
        allow list: if request.auth != null && request.query.get("settings.isPublic") == true;
      }
    }
  }
}
