
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isGameCreator(gameId) {
      return get(/databases/$(database)/documents/games/$(gameId)).data.creator == request.auth.uid;
    }
    
    // Checks the playerUids map on the game document.
    function isPlayerInGame(gameId) {
        let gameDoc = get(/databases/$(database)/documents/games/$(gameId));
        return isSignedIn() && (request.auth.uid in gameDoc.data.playerUids);
    }
    
    function isGamePublic(gameId) {
       return get(/databases/$(database)/documents/games/$(gameId)).data.settings.isPublic == true;
    }

    match /games/{gameId} {
      // Allow read if the user is a player in the game, or if the game is public and in waiting.
      allow read: if isPlayerInGame(gameId) || (isGamePublic(gameId) && resource.data.status == 'waiting');
      
      // Allow create if the user is authenticated and is the creator.
      allow create: if isSignedIn() 
                    && request.resource.data.creator == request.auth.uid
                    && request.resource.data.playerUids[request.auth.uid] == true
                    && request.resource.data.players[0].userId == request.auth.uid;

      // Server actions run with admin privileges, so they bypass these client-side rules.
      // These rules are primarily for client-side operations (joining, reading lobby).
      allow update: if isSignedIn() && (
                      // Player joining a waiting game
                      (get(/databases/$(database)/documents/games/$(gameId)).data.status == 'waiting' 
                        && request.resource.data.players.size() == resource.data.players.size() + 1
                        && !(request.auth.uid in resource.data.playerUids)
                        && request.auth.uid in request.resource.data.playerUids)
                    );
                    
      // Only the creator can delete a game.
      allow delete: if isGameCreator(gameId);

      match /playerData/{userId} {
        // A user can only ever read their OWN private data.
        allow read: if request.auth.uid == userId && isPlayerInGame(gameId);
        // Writes are handled by server actions with admin privileges.
        allow write: if false; 
      }
    }
  }
}
