
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isGameCreator(gameId) {
      return get(/databases/$(database)/documents/games/$(gameId)).data.creator == request.auth.uid;
    }
    
    function isPlayerInGame(gameId) {
        let gameDoc = get(/databases/$(database)/documents/games/$(gameId));
        return isSignedIn() && request.auth.uid in gameDoc.data.playerUids;
    }

    match /games/{gameId} {
      allow read: if isSignedIn();
      
      allow create: if isSignedIn() 
                    && request.resource.data.creator == request.auth.uid
                    && request.resource.data.playerUids[request.auth.uid] == true
                    && request.resource.data.players[0].userId == request.auth.uid
                    && request.resource.data.players.size() == 1;

      allow update: if isSignedIn() && (
                      // Game logic updates by creator (server-side)
                      isGameCreator(gameId) ||
                      // Player joining a waiting game
                      (get(/databases/$(database)/documents/games/$(gameId)).data.status == 'waiting' 
                        && request.resource.data.players.size() == resource.data.players.size() + 1
                        && !(request.auth.uid in resource.data.playerUids)
                        && request.auth.uid in request.resource.data.playerUids) ||
                      // Player updating their own lastActiveAt timestamp (or other limited fields)
                      (isPlayerInGame(gameId) && request.resource.data.players.size() == resource.data.players.size())
                    );
                    
      allow delete: if isGameCreator(gameId);

      match /playerData/{userId} {
        allow read: if isPlayerInGame(gameId) && (request.auth.uid == userId || isGameCreator(gameId));
        allow write: if isGameCreator(gameId); // Only server (via creator) can write to private data
      }
    }
  }
}
