
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /games/{gameId} {
      // Allow anyone to read game data. This is necessary for players to join and see the lobby.
      // More restrictive rules could be applied if game data should be private.
      allow read: if request.auth != null;

      // Allow any authenticated user to create a game document.
      // The creator's ID is validated in the document itself.
      allow create: if request.auth != null && request.resource.data.creator == request.auth.uid;
      
      // Allow updates only from authenticated users who are players in the game.
      // All complex logic (phase transitions, actions) is handled by trusted Server Actions,
      // which run with admin privileges and bypass these rules.
      // These rules are a safeguard against basic client-side manipulation.
      allow update: if request.auth != null && get(/databases/$(database)/documents/games/$(gameId)).data.players.exists(p => p.userId == request.auth.uid);
    }
  }
}
