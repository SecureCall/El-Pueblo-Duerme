
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /games/{gameId} {
      // Allow any authenticated user to read game documents.
      // This is a broad rule to ensure the public games list can be fetched.
      allow read: if request.auth != null;

      // Allow any authenticated user to create a game.
      allow create: if request.auth != null;

      // Allow a user to update a game only if they are a player in that game.
      allow update: if request.auth != null && request.auth.uid in resource.data.players;
    }
  }
}
