rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /games/{gameId} {
      allow read: if true;
      
      allow create: if request.auth != null && request.resource.data.creator == request.auth.uid;
      
      function isPlayer() {
        return resource.data.players.exists(p => p.userId == request.auth.uid);
      }
      
      allow update: if request.auth != null && isPlayer();
    }
  }
}
    