rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isPlayer(gameId) {
      return get(/databases/$(database)/documents/games/$(gameId)).data.players.exists(p => p.userId == request.auth.uid);
    }
    
    match /games/{gameId} {
      allow read: if true; // Public read for game state
      allow create: if request.auth != null 
                    && request.resource.data.creator == request.auth.uid
                    && request.resource.data.players[0].userId == request.auth.uid;
      
      allow update: if 
          request.auth != null &&
          (
            // Rule: Joining an existing game in 'waiting' state.
            (
                resource.data.status == 'waiting' &&
                request.resource.data.players.size() == resource.data.players.size() + 1 &&
                !isPlayer(gameId) // Ensure the user is not already in the game
            ) ||
            // Rule: Submitting a vote or night action.
            (
                isPlayer(gameId) &&
                request.resource.data.players.size() == resource.data.players.size()
            ) ||
             // Rule: Only the creator can process phases.
            (
                request.auth.uid == resource.data.creator &&
                (
                    (
                        resource.data.status == 'waiting' && 
                        request.resource.data.status == 'in_progress'
                    ) ||
                    (
                        resource.data.status == 'in_progress' &&
                        resource.data.phase != request.resource.data.phase
                    ) ||
                    (
                        resource.data.status == 'finished' &&
                        request.resource.data.status == 'waiting'
                    )
                )
            )
          );
    }

    match /games/{gameId}/player_profiles/{userId} {
      allow read: if true;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
    }
  }
}
