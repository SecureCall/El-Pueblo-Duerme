rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isPlayer(gameId) {
      return get(/databases/$(database)/documents/games/$(gameId)).data.players.exists(p => p.userId == request.auth.uid);
    }
    
    function getRequestPlayer(players) {
        return request.resource.data.players.filter(p => p.userId == request.auth.uid)[0];
    }

    match /games/{gameId} {
      allow read: if true; 

      // Allow creating a game if the creator is authenticated and is the first player.
      allow create: if request.auth != null
                    && request.resource.data.creator == request.auth.uid;
      
      // Allow updates for joining, playing, or managing the game.
      allow update: if request.auth != null &&
          (
            // Rule: A new player can join a 'waiting' game.
            (
                resource.data.status == 'waiting' &&
                request.resource.data.players.size() == resource.data.players.size() + 1 &&
                !isPlayer(gameId)
            ) ||
            // Rule: Any existing player can update fields during the game (e.g., voting, night actions).
            (
                isPlayer(gameId) &&
                request.resource.data.players.size() == resource.data.players.size()
            ) ||
             // Rule: Only the creator can start, process phases, or reset the game.
            (
                request.auth.uid == resource.data.creator &&
                (
                    (resource.data.status == 'waiting' && request.resource.data.status == 'in_progress') ||
                    (resource.data.status == 'in_progress' && resource.data.phase != request.resource.data.phase) ||
                    (resource.data.status == 'finished' && request.resource.data.status == 'waiting')
                )
            )
          );

        match /player_profiles/{userId} {
            // Allow a user to create, update, or delete their own profile.
            allow write: if request.auth != null && request.auth.uid == userId;
            allow read: if true;
        }
    }
  }
}
