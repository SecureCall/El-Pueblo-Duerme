
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /games/{gameId} {
      // Allow public reads for games in lobby, otherwise only players can read.
      allow read: if request.auth != null && (resource.data.status == 'waiting' && resource.data.settings.isPublic == true) || exists(/databases/$(database)/documents/games/$(gameId)/playerData/$(request.auth.uid));
      
      // Deny all client-side writes. All mutations must go through server actions.
      allow write: if false;
    }

    match /games/{gameId}/playerData/{userId} {
      // A player can only read their OWN private data.
      allow read: if request.auth.uid == userId;
      // All client-side writes are forbidden.
      allow write: if false;
    }
  }
}
