
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isPlayerInGame(gameId) {
      return exists(/databases/$(database)/documents/games/$(gameId)/players/$(request.auth.uid));
    }

    match /publicGames/{gameId} {
      allow read: if request.auth.uid != null;
      allow write: if false;
    }

    match /games/{gameId} {
      allow get: if isPlayerInGame(gameId);
      allow list: if false; // Deny listing all games
      allow write: if false; // Deny all client writes to the main game doc

      match /players/{playerId} {
        // Allow any player in the game to get the public data of any other player, and to list all players.
        allow get, list: if isPlayerInGame(gameId);
        // Deny client writes to public player data.
        allow write: if false;
      }

      match /playerData/{userId} {
        // Only allow a user to read their own private data.
        allow read: if request.auth.uid != null && request.auth.uid == userId;
        allow write: if false;
      }
      
      // PUBLIC CHAT
      match /publicChat/{messageId} {
        allow read: if isPlayerInGame(gameId);
        allow write: if false;
      }

      // GHOST CHAT (any player in game can read, alive or dead)
      match /ghostChat/{messageId} {
        allow read: if isPlayerInGame(gameId);
        allow write: if false;
      }

      // WOLF CHAT
      match /wolfChat/{messageId} {
        allow read: if get(/databases/$(database)/documents/games/$(gameId)/playerData/$(request.auth.uid)).data.role in ['werewolf', 'wolf_cub'];
        allow write: if false;
      }

      // TWIN CHAT
      match /twinChat/{messageId} {
        // Ensure twins array exists and is not null before checking
        allow read: if resource.parent.data.twins != null && (resource.parent.data.twins[0] == request.auth.uid || resource.parent.data.twins[1] == request.auth.uid);
        allow write: if false;
      }

      // LOVERS CHAT
      match /loversChat/{messageId} {
        allow read: if get(/databases/$(database)/documents/games/$(gameId)/playerData/$(request.auth.uid)).data.isLover == true;
        allow write: if false;
      }

      // FAIRY CHAT
      match /fairyChat/{messageId} {
        allow read: if resource.parent.data.fairiesFound == true && get(/databases/$(database)/documents/games/$(gameId)/playerData/$(request.auth.uid)).data.role in ['seeker_fairy', 'sleeping_fairy'];
        allow write: if false;
      }
    }
  }
}
