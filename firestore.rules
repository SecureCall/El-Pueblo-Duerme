rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /games/{gameId} {
      // Allow anyone to read public, waiting games
      allow read: if resource.data.settings.isPublic == true && resource.data.status == 'waiting';
      // Allow authenticated users to read/write specific games (game logic should validate this)
      allow read, write: if request.auth != null;
    }
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}