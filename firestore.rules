rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /games/{gameId} {
      // Allow public read for game lobbies, but restrict sensitive data.
      allow read: if true;
      
      // Writes are complex and should be handled by server-side logic (Cloud Functions / Server Actions).
      // This rule allows authenticated users to perform specific update actions validated by server logic.
      allow write: if request.auth != null;
    }

    match /games/{gameId}/playerData/{userId} {
        // A player can only read their OWN private data.
      allow read, write: if request.auth.uid == userId;
    }
    
    // Fallback rule for any other documents
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}