rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /games/{gameId} {
      // Public game data is readable by any authenticated user for the lobby.
      allow read: if request.auth != null;

      // DENY all client-side writes. All mutations must go through server actions.
      allow write: if false;
    }

    match /games/{gameId}/playerData/{userId} {
      // A player can only read their OWN private data.
      allow read: if request.auth != null && request.auth.uid == userId;

      // DENY all client-side writes.
      allow write: if false;
    }
    
    // Default deny all other collections.
    match /{path=**}/documents/{document} {
      allow read, write: if false;
    }
  }
}
